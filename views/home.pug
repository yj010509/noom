doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(rel="stylesheet", href="https://use.fontawesome.com/releases/v5.15.4/css/all.css", integrity="sha384-DyZ88mC6Up2uqS4h/KRgHuoeGwBcD4Ng9SiP4dIRy0EXTlnuz47vAwmeGwVChigm", crossorigin="anonymous")
        link(rel="stylesheet", href="./public/css/style.css")
        title For Senior
    body 
        header
            h1 For Senior
        main
            div#welcome 
                form
                    input#roomName(type="text", required, placeholder="방 이름")
                    input#nickname(type="text", required, placeholder="닉네임")
                    button 입장

            div#call(class="call")
                div#streamBox
                    div#streams
                        div#myStream(class="people1")
                            video#myFace(autoplay, playsinline, width="400", height="400")
                            h3#userNickname  
                    div#controlers
                        div#controlers__column
                            select#cameras
                        div#controlers__column
                            div#buttons
                                button#mute
                                    i(class="fas fa-microphone fa-2x unMuteIcon")
                                    i(class="fas fa-microphone-slash fa-2x muteIcon")
                                button#camera 
                                    i(class="fas fa-video fa-2x cameraIcon")
                                    i(class="fas fa-video-slash fa-2x unCameraIcon")
                        div#controlers__column
                            button#leave 나가기
                div#chatRoom
                    ul#chatBox
                    form#chatForm
                        input(required, type="text", placeholder="메시지를 입력하세요.")
                        button 전송
        aside.modal.hidden
            div.modal__box
                h2.modal__text
                button.modal__btn OK




        script(src="/socket.io/socket.io.js")
        script(src="/public/js/app.js")